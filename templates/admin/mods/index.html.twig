{% extends 'admin/layout/card.html.twig' %}

{% block title %}{{ icon('brand') }} Gestion des Mods
{% endblock %}
{% block actions %}
  <a href="{{ path('admin_mod_new') }}" class="btn-primary">{{ icon('check') }}Ajouter un Mods</a>
{% endblock %}

{% block content %}
  <table class="table">
    <thead>
    <tr>
      <th>ID</th>
      <th>Nom</th>
      <th class="text-center">Statut</th>
      <th class="text-right">Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for row in rows %}
      {% set link = path('admin_mod_edit', {id: row.id}) %}
      <tr>
        <td class="dashboard-id">
          <a href="{{ link }}">{{ row.id }}</a>
        </td>
        <td>
          <a href="{{ link }}">{{ row.name }}</a>
        </td>
        <td><span class="bullet {% if row.approuve == false %}bullet--danger{% endif %}"></span></td>
        <td>
          <div class="dashboard-actions">

            <a href="{{ path('admin_blog_clone', {id: row.id}) }}">{{ icon('clone') }}</a>
            <a href="{{ link }}">{{ icon('edit') }}</a>
            <form action="{{ path('admin_mod_edit', {id: row.id}) }}" method="post" onsubmit="return confirm('Voulez-vous vraiment supprimer ce contenu')">
              <input type="hidden" name="_method" value="DELETE" />
              <button type="submit">
                {{ icon('delete') }}
              </button>
            </form>

          </div>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  {{ knp_pagination_render(rows) }}

{% endblock %}
