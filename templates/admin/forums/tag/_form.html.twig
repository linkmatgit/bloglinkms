
{{ form_start(form, {attr: {class: 'stacked'}}) }}

<section class="stack-large">

  <section>
    <div class="section-title">
      Informations générales
    </div>
    <div class="grid">
      {{ form_row(form.name) }}
      {{ form_row(form.slug) }}
      {{ form_row(form.parent) }}
      {{ form_row(form.color) }}
      {{ form_row(form.author) }}
      <div class="flex center">
        {{ form_row(form.online) }}
      </div>

    </div>
    <div class="full">
      <div class="section-title mt3">
        Contenu
      </div>
      {{ form_row(form.description) }}
    </div>
  </section>

  <section>
    <button type="submit" class="btn-gradient">Sauvegarder</button>
  </section>

</section>

{{ form_end(form) }}

